<Window x:Class="DVD6.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer un Utilisateur" Height="250" Width="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Créer un nouvel utilisateur" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Nom d'utilisateur :" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNewUsername" Grid.Row="1" Margin="100,0,0,0" VerticalAlignment="Center"/>

        <TextBlock Text="Mot de passe :" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <PasswordBox x:Name="txtNewPassword" Grid.Row="2" Margin="100,0,0,0" VerticalAlignment="Center"/>

        <CheckBox x:Name="chkIsAdmin" Grid.Row="3" Content="Administrateur" Margin="0,10,0,0"/>

        <Button x:Name="btnCreateUser" Grid.Row="4" Content="Créer l'utilisateur" Width="150" HorizontalAlignment="Center" Margin="0,20,0,0" Click="btnCreateUser_Click"/>
    </Grid>
</Window>
