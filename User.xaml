<Window x:Class="DVD6.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier le mot de passe" Height="250" Width="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Modifier le mot de passe" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Ancien mot de passe :" Grid.Row="1" VerticalAlignment="Center"/>
        <PasswordBox x:Name="txtOldPassword" Grid.Row="1" Margin="150,0,0,0" VerticalAlignment="Center"/>

        <TextBlock Text="Nouveau mot de passe :" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <PasswordBox x:Name="txtNewPassword" Grid.Row="2" Margin="150,0,0,0" VerticalAlignment="Center"/>

        <Button x:Name="btnChangePassword" Grid.Row="3" Content="Modifier le mot de passe" Width="200" HorizontalAlignment="Center" Margin="0,20,0,0" Click="btnChangePassword_Click"/>
    </Grid>
</Window>
